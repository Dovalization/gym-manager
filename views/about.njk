{% extends "layout.njk" %}

{% block head %}
    <title>Sobre - Guilherme Doval</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <img src="{{about.avatar_path}}" alt="Imagem de {{about.name}}">
        <h1>{{about.name}}</h1>
        <h2>{{about.role}}</h2>
        <p>{{about.description}}</p>
    </div>
    <nav id="links-footer"class="links">
        {% for link in about.links %}
        <a href="{{link.url}}" target="_blank">{{link.name}}</a>
        {% endfor %}
    </nav>
{% endblock %}
